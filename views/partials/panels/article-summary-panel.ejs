<!-- Button trigger modal -->
<button type="button" id="summary-modal-btn" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop-summary"
    style="display: none;">
    Launch static backdrop modal
</button>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop-summary" data-backdrop="static" data-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">

    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title" id="staticBackdropLabel">
                    <b>Add a Title and Summary for your article</b>
                </h5>

                <button type="button" class="close summary-close-btns" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>


            <div class="modal-body">

                <textarea id="article-title" placeholder="Title" minlength="2" maxlength="70"></textarea>
                
                <textarea id="summary-sheet" name="summary" placeholder="Summary" cols="58" rows="6"></textarea>
                <b><p id="char-count">Chars: <span>0</span></p></b>


                <div id="error-alert-summary" class="alert alert-danger alert-box" role="alert"></div>

            </div>


            <div class="modal-footer" id="summary-change-footer">                

                <button type="button" class="btn btn-secondary summary-close-btns"
                    data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="expose-btn">Expose</button>


                <!-- Loading Animation -->
                <div id="loading-summary" class="sk-chase">
                    <div class="sk-chase-dot"></div>
                    <div class="sk-chase-dot"></div>
                    <div class="sk-chase-dot"></div>
                    <div class="sk-chase-dot"></div>
                    <div class="sk-chase-dot"></div>
                    <div class="sk-chase-dot"></div>
                </div>

            </div>
        </div>
    </div>
</div>